<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingLeft="5dp" 
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:background="@color/gray_opacity_35">
    
	<android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true" >
        
     	<RelativeLayout
     	    android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="true" >

     		<ImageView
     		    android:id="@+id/imgStoreLogo"
     		    android:layout_width="140dp"
     		    android:layout_height="70dp"
     		    android:layout_alignParentLeft="true"
     		    android:layout_alignParentTop="true" />

     		<TextView
     		    android:id="@+id/tvStoreName"
     		    android:layout_width="match_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_alignParentTop="true"
     		    android:layout_toRightOf="@+id/imgStoreLogo"
     		    android:gravity="center_vertical"
     		    android:textSize="16sp"
     		    android:drawableRight="@drawable/ic_imglike"
     		    android:layout_marginLeft="5dp"
     		    android:textColor="@android:color/black" />

     		<TextView
     		    android:id="@+id/tvNumOfOffers"
     		    android:layout_width="wrap_content"
     		    android:layout_height="wrap_content"
     		    android:layout_alignLeft="@+id/tvStoreName"
     		    android:layout_below="@+id/tvStoreName"
     		     />

     		
     		
     		
     		<TextView
     		    android:id="@+id/tvCategories"
     		    android:layout_width="wrap_content"
     		    android:layout_height="wrap_content"
     		    android:layout_alignParentLeft="true"
     		    android:layout_below="@+id/imgStoreLogo"
     		    android:padding="5dp"
     		    android:ellipsize="end"
        		android:maxLines="1"
        		android:textSize="15sp"
        		android:gravity="center_vertical"
     		    />

     		<TextView
     		    android:id="@+id/tvDistFromCurrLoc"
     		    android:layout_width="wrap_content"
     		    android:layout_height="wrap_content"
     		    android:layout_alignParentLeft="true"
     		    android:layout_below="@+id/tvCategories"
     		    android:gravity="center_vertical"
     		    android:padding="5dp"
     		    android:textSize="15sp"
     		    android:drawableLeft="@drawable/ic_distance" />
            
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
